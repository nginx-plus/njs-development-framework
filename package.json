{
  "name": "create-njs-app",
  "version": "0.0.1",
  "description": "Create, build, and test [NJS](https://nginx.org/en/docs/njs/) addons for NGINX.",
  "main": "src/script.js",
  "scripts": {
    "docker:up": "docker-compose up &",
    "docker:down": "docker-compose down",
    "njs": "./_internal/njs",
    "build": "./_internal/build.mjs dev",
    "test:unit": "./_internal/bundle_with_transpile.sh && njs ./test/support/runner-unit.mjs",
    "test:integration": "./_internal/run_integration.sh",
    "clean": "rm -rf ./_build/*",
    "release": "./_internal/build.mjs release"
  },
  "author": "",
  "license": "Apache 2.0",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/preset-env": "^7.16.11",
    "assert": "^2.0.0",
    "babel-loader": "^8.2.4",
    "chalk": "^5.0.1",
    "core-js": "^3.21.1",
    "handlebars": "^4.7.7",
    "install": "^0.13.0",
    "lodash.isequal": "^4.5.0",
    "npm": "^8.8.0",
    "power-assert": "^1.6.1",
    "webpack-cli": "^4.9.2",
    "yargs": "^17.4.1"
  },
  "releases": {
    "my_release": {
      "version": "0.0.1",
      "releaseRoot": "./",
      "nginxPrefix": "/usr/local/nginx",
      "nginxModulesPath": "./modules"
    }
  },
  "configuration": {
    "dev": {
      "config": {
        "foo": "qux"
      }
    },
    "test": {},
    "default": {
      "config": {
        "foo": "bar"
      }
    }
  }
}
